<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5C6BC0"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90CAF9"
        android:padding="12dp">

        <!-- ID -->
        <TextView
            android:id="@+id/tvLabelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="1"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelId"
            app:layout_constraintStart_toEndOf="@id/tvLabelId" />

        <!-- Ano de lançamento -->
        <TextView
            android:id="@+id/tvLabelAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Ano Lançamento:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelId"
            app:layout_constraintStart_toEndOf="@id/tvId" />

        <TextView
            android:id="@+id/tvAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="2025"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelAno"
            app:layout_constraintStart_toEndOf="@id/tvLabelAno" />

        <!-- Duração -->
        <TextView
            android:id="@+id/tvLabelDuracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Duração:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelAno"
            app:layout_constraintStart_toEndOf="@id/tvAno" />

        <TextView
            android:id="@+id/tvDuracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="3min20s"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelDuracao"
            app:layout_constraintStart_toEndOf="@id/tvLabelDuracao" />

        <!-- Nome -->
        <TextView
            android:id="@+id/tvLabelNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nome:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelId" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="teste"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelNome"
            app:layout_constraintStart_toEndOf="@id/tvLabelNome" />

        <!-- Cantor -->
        <TextView
            android:id="@+id/tvLabelCantor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cantor:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelNome" />

        <TextView
            android:id="@+id/tvInterprete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Matheus"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelCantor"
            app:layout_constraintStart_toEndOf="@id/tvLabelCantor" />

        <!-- Gênero -->
        <TextView
            android:id="@+id/tvLabelGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gênero:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelCantor" />

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Internacional"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelGenero"
            app:layout_constraintStart_toEndOf="@id/tvLabelGenero" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
